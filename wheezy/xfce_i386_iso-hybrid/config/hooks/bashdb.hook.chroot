#!/bin/bash
TMP="/tmp/bashdb"
[[ ! -d ${TMP} ]] && mkdir -p ${TMP}; cd ${TMP}
rm -R -f -v *
VERSION=4.2-0.8
wget http://downloads.sourceforge.net/project/bashdb/bashdb/${VERSION}/bashdb-${VERSION}.tar.bz2
tar xfv bashdb-${VERSION}.tar.bz2
cd bashdb-${VERSION}
./configure && make && make check && make install

rm -R -f -v ${TMP}
