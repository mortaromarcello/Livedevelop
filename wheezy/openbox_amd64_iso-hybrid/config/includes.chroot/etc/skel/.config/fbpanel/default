#        # ClockFmt = <span font="Sans 8"><b>%-l:%M</b> %P&#xA;%a %B %-e</span>
#        TooltipFmt = %A %x
#        #Action = xmessage Please define some command &
#        ShowCalendar = false
#        ShowTooltip = true
#    }
#}

