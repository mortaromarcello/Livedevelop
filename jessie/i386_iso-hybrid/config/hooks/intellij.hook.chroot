#!/bin/bash

[[ ! -d /tmp/intellij ]] && mkdir -p /tmp/intellij; cd /tmp/intellij

wget http://download.jetbrains.com/idea/ideaIC-13.0.1.tar.gz
tar -C /opt -xvf ideaIC-13.0.1.tar.gz
cat > /usr/share/applications/intellijidea.desktop <<EOF
[Desktop Entry]
Type=Application
Name=IntellijIDEA
Exec=/opt/idea-IC-133.331/bin/idea.sh
Terminal=false
Categories=Development;IDE;Java;
Icon=/opt/idea-IC-133.331/bin/idea.png
EOF
rm -R -f -v /tmp/intellij
