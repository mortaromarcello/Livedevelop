#!/bin/bash
TMP="/tmp/pydev"
[[ ! -d ${TMP} ]] && mkdir -p ${TMP}; cd ${TMP}
rm -R -f -v ${TMP}/*

VER=3.4.1
wget http://downloads.sourceforge.net/project/pydev/pydev/PyDev%20${VER}/PyDev%20${VER}.zip
if [ -d /usr/lib/eclipse ]; then
  unzip "PyDev ${VER}.zip" -d /usr/lib/eclipse
fi

rm -R -f -v ${TMP}
