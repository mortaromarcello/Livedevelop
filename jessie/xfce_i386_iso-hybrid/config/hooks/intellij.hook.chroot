#!/bin/bash
TMP="/tmp/intellij"
[[ ! -d ${TMP} ]] && mkdir -p ${TMP}; cd ${TMP}
rm -R -f -v *
VER="13.0.2"
BUILD="133.696"
wget http://download.jetbrains.com/idea/ideaIC-${VER}.tar.gz
tar -C /opt -xvf ideaIC-${VER}.tar.gz
cat > /usr/share/applications/intellijidea.desktop <<EOF
[Desktop Entry]
Type=Application
Name=IntellijIDEA
Exec=/opt/idea-IC-${BUILD}/bin/idea.sh
Terminal=false
Categories=Development;IDE;Java;
Icon=/opt/idea-IC-${BUILD}/bin/idea.png
EOF

rm -R -f -v ${TMP}
