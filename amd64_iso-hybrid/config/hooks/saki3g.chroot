#!/bin/bash

[[ ! -d /tmp/sakis3g ]] && mkdir -p /tmp/sakis3g; cd /tmp/sakis3g
git clone http://github.com/mortaromarcello/sakis3g-source
cd sakis3g-source
mkdir build
./compile
cp build/sakis3gz /usr/bin/sakis3g
cp files/saki3g.png /usr/share/icons
cp files/saki3g.desktop /usr/share/applications
rm -R -f -v /tmp/sakis3g
