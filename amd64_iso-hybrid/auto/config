#!/bin/sh

set -e

lb config noauto \
	--distribution wheezy \
	--archive-areas "main contrib non-free" \
	--architecture amd64 \
	--linux-flavours amd64 \
	--binary-images iso-hybrid \
	--firmware-chroot true \
	--iso-application "Livedevelop" \
	--iso-preparer "mortaromarcello" \
	--iso-publisher "Livedevelop Live project; mortaromarcello@gmail.com" \
	--iso-volume "Livedevelop" \
	--bootappend-live "boot=live config locales=it_IT.UTF-8 keyboard-layouts=it timezone=Europe/Rome quiet splash persistence" \
	"${@}"
